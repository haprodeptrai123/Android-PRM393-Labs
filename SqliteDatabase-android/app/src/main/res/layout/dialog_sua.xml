<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textSua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sửa Công Việc"
        android:textColor="#F44336"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/editTextTenCVedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSua"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonSua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTenCVedit"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Sửa" />

    <Button
        android:id="@+id/buttonHuyedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTenCVedit"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="Hủy" />


</RelativeLayout>